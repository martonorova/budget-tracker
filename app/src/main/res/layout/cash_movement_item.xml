<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/CashMovementItemLinLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/CategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="CAT_shopping"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/DirectionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="DIR_expense"/>

        </LinearLayout>

        <TextView
            android:id="@+id/AmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="Amount 10000"
            android:layout_toEndOf="@+id/CashMovementItemLinLayout"
            android:layout_toStartOf="@id/EditCashMovementItemButton"
            android:gravity="center_horizontal"
            android:layout_marginTop="18dp"/>

        <ImageButton
            android:id="@+id/EditCashMovementItemButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|end"
            android:scaleType="fitXY"
            android:src="@drawable/ic_pencil_grey600_48dp"
            android:layout_toStartOf="@+id/RemoveCashMovementItemButton"/>

        <ImageButton
            android:id="@+id/RemoveCashMovementItemButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|end"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete_grey600_48dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>