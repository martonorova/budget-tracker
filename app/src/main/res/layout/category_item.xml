<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="@dimen/recycler_view_margin"
    android:layout_marginStart="@dimen/recycler_view_margin"
    android:layout_marginTop="@dimen/recycler_view_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_padding"
        android:background="@color/item_color">

        <TextView
            android:id="@+id/CategoryNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="CategoryName"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/CategoryDirectionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Direction"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/CategoryNameTextView"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <ImageButton
            android:id="@+id/EditCategoryItemButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/ic_pencil_grey600_48dp"
            android:layout_toStartOf="@+id/RemoveCategoryItemButton"
            />

        <ImageButton
            android:id="@+id/RemoveCategoryItemButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete_grey600_48dp"
            android:layout_alignParentEnd="true"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>